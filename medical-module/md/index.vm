<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css">
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
    <style>
        .content_div{
            font-size: larger;

        }
    </style>
</head>
<body>
<div data-role="page">
    <div data-role="header">
        <h1>列表</h1>
    </div>
    <div data-role="footer" data-id="foo1" data-position="fixed">
        <div data-role="navbar">
            <ul id="nav_ul">
                <li><a href="#" onclick="showContent(0)">列表信息</a></li>
                <li><a href="#" onclick="showContent(1)">上传图片</a></li>
                <li><a href="#" onclick="showContent(2)">个人</a></li>
            </ul>
        </div><!-- /navbar -->
    </div>
    <div data-role="content" id="list" _url="/md/list.htm" class="content_div">
    </div>
    <div data-role="content" id="up" _url="/md/up.htm" class="content_div">
    </div>
    <div data-role="content" id="my" _url="/md/my.htm" class="content_div">
    </div>
</div>
<script>
    $(function () {
        $(".content_div").hide();
        showContent(0);
    })

    function init(content) {
        content.show();
        var url = content[0].getAttribute("_url");
        $.post(url,{},function (resp) {
            $(resp).appendTo(content);
        })
    }

    function destroy(content) {
        content.empty();
        content.hide();
    }

    function showContent(index) {
        var lis = $(".content_div")
        for(var i=0;i<lis.length;i++){
            var content = $(lis[i]);
            if(index == i){
                destroy(content);
                init(content);
            }else {
                destroy(content);
            }
        }
    }
</script>
</body>
</html>